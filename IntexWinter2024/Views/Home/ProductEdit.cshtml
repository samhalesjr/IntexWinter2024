@{
}

@model List<Product>

<table>
    <thead>
        <tr>
            <td>Product ID</td>
            <td>Product Name</td>
            <td>Year</td>
            <td>Number of Parts</td>
            <td>Price</td>
            <td>Image Link</td>
            <td>Primary Color</td>
            <td>Secondary Color</td>
            <td>Description</td>
            <td>Edit</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@p.ProductId</td>
                <td>@p.Name</td>
                <td>@p.Year</td>
                <td>@p.NumParts</td>
                <td>@p.Price</td>
                <td>@p.ImgLink</td>
                <td>@p.PrimaryColor</td>
                <td>@p.SecondaryColor</td>
                <td>
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#description@(p.ProductId)" aria-expanded="false" aria-controls="description@(p.ProductId)">
                        Show Description
                    </button>
                    <div class="collapse" id="description@(p.ProductId)">
                        @p.Description
                    </div>
                </td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="ProductEditPage" asp-route-id="@p.ProductId" style="background-color: #317287">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
