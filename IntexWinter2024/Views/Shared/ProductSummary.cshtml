@model ProductCategoryViewModel

<div class="card m-1 p-1">
    <h4>@Model.Products.Name</h4>
    <ul>
        <li>$@Model.Products.Price</li>
        <li>@Model.Products.PrimaryColor</li>
        <li>Year Released: @Model.Products.Year</li>
        @if (Model.Categories.Count == 1)
        {
            <li>Category: @Model.Categories.First()</li>
        }
        else
        {
            <li>Categories: @string.Join(", ", Model.Categories)</li>
        }
    </ul>
    <form id="@Model.Products.ProductId" method="post" asp-page="/Cart">
        <input type="hidden" asp-for="Products.ProductId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-success">Add To Cart</button>
    </form>
</div>